package MyLinkedList;

public class LinkedList {
	
	private Node front;
	
	//Add to the front
	public void addFront(int value){
		Node node = new Node(value);
		node.value = value;
		node.next = front; //this is null;
		front = node;
	}
	
	//size of the list
	public int sizeOfList(){
		int count = 1;
		
		Node start = front;
		while(start.next != null){
			count++;
			start = start.next;
		}
		
		return count;
	}
	
	//Remove node
	Node removeNode(){
		 Node temp = front;
		front = front.next;
		return temp;
	}
	
	Node getAtIndex(int i){
		int count = 0;
		Node start = front;
		while(i != count){
			start = start.next;
			count++;
		}
		return count;
	}

}
